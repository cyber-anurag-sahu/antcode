{
    "functions": {
        "source": "functions"
    },
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": {
        "public": "www",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}